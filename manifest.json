{
    "manifest_version": 3,
    "name": "Browser Timer Overlay",
    "version": "1.0",
    "description": "Overlay a countdown timer on your browser",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/timer16.png",
        "48": "icons/timer48.png",
        "128": "icons/timer128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
        "service_worker": "background.js"
    }
  }
  